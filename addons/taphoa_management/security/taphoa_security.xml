<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Category cho Tạp hóa -->
        <record id="module_category_taphoa" model="ir.module.category">
            <field name="name">Cửa hàng Tạp hóa</field>
            <field name="description">Quản lý quyền cho nhân viên cửa hàng tạp hóa</field>
            <field name="sequence">5</field>
            <field name="visible" eval="True"/>
        </record>
        
        <!-- Nhóm quyền -->
        <record id="group_taphoa_user" model="res.groups">
            <field name="name">Nhân viên</field>
            <field name="category_id" ref="module_category_taphoa"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_taphoa_cashier" model="res.groups">
            <field name="name">Thu ngân</field>
            <field name="category_id" ref="module_category_taphoa"/>
            <field name="implied_ids" eval="[(4, ref('group_taphoa_user')), (4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record id="group_taphoa_warehouse" model="res.groups">
            <field name="name">Thủ kho</field>
            <field name="category_id" ref="module_category_taphoa"/>
            <field name="implied_ids" eval="[(4, ref('group_taphoa_user')), (4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="group_taphoa_accountant" model="res.groups">
            <field name="name">Kế toán</field>
            <field name="category_id" ref="module_category_taphoa"/>
            <field name="implied_ids" eval="[(4, ref('group_taphoa_user')), (4, ref('account.group_account_invoice'))]"/>
        </record>

        <record id="group_taphoa_manager" model="res.groups">
            <field name="name">Chủ cửa hàng</field>
            <field name="category_id" ref="module_category_taphoa"/>
            <field name="implied_ids" eval="[(4, ref('group_taphoa_cashier')), (4, ref('group_taphoa_warehouse')), (4, ref('group_taphoa_accountant')), (4, ref('point_of_sale.group_pos_manager')), (4, ref('stock.group_stock_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Rules -->
        <record id="taphoa_warehouse_receipt_user_rule" model="ir.rule">
            <field name="name">Phiếu nhập kho - Nhân viên</field>
            <field name="model_id" ref="model_taphoa_warehouse_receipt"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_taphoa_warehouse'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="taphoa_warehouse_receipt_manager_rule" model="ir.rule">
            <field name="name">Phiếu nhập kho - Quản lý</field>
            <field name="model_id" ref="model_taphoa_warehouse_receipt"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_taphoa_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
