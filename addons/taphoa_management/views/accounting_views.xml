<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view - Báo cáo kế toán -->
    <record id="view_accounting_report_form" model="ir.ui.view">
        <field name="name">taphoa.accounting.report.form</field>
        <field name="model">taphoa.accounting.report</field>
        <field name="arch" type="xml">
            <form string="Báo cáo kế toán">
                <header>
                    <button name="action_generate_report" string="Tạo báo cáo" 
                            type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="report_type"/>
                        </group>
                    </group>
                    <group string="Kết quả">
                        <group>
                            <field name="total_revenue" widget="monetary"/>
                            <field name="total_expense" widget="monetary"/>
                        </group>
                        <group>
                            <field name="total_profit" widget="monetary"/>
                            <field name="total_debt" widget="monetary"/>
                        </group>
                    </group>
                    <field name="currency_id" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view - Báo cáo kế toán -->
    <record id="view_accounting_report_tree" model="ir.ui.view">
        <field name="name">taphoa.accounting.report.tree</field>
        <field name="model">taphoa.accounting.report</field>
        <field name="arch" type="xml">
            <tree string="Báo cáo kế toán">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="report_type"/>
                <field name="total_revenue" widget="monetary"/>
                <field name="total_expense" widget="monetary"/>
                <field name="total_profit" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Action - Báo cáo kế toán -->
    <record id="action_accounting_report" model="ir.actions.act_window">
        <field name="name">Báo cáo kế toán</field>
        <field name="res_model">taphoa.accounting.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo báo cáo kế toán mới
            </p>
            <p>
                Theo dõi doanh thu, chi phí, lợi nhuận và công nợ.
            </p>
        </field>
    </record>

    <!-- Extend Account Move Form View -->
    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_pos_invoice" invisible="1"/>
                <field name="warehouse_receipt_id" invisible="not warehouse_receipt_id"/>
            </xpath>
        </field>
    </record>

</odoo>
