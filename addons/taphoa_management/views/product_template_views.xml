<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend Product Template Form View -->
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Hiển thị các trường quan trọng ở General Information -->
            <xpath expr="//page[@name='general_information']//group[@name='group_standard_price']" position="after">
                <group string="Cấu hình Bán hàng &amp; POS">
                    <field name="sale_ok" string="Có thể bán"/>
                    <field name="available_in_pos" string="Hiển thị trong POS (Thu ngân)"/>
                    <field name="type" string="Loại sản phẩm"/>
                </group>
            </xpath>
            
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Quản lý Tạp hóa" name="taphoa_info">
                    <group>
                        <group string="Tồn kho">
                            <field name="min_stock_qty"/>
                            <field name="max_stock_qty"/>
                            <field name="is_fast_moving"/>
                            <field name="total_sold_qty"/>
                        </group>
                        <group string="Thông tin khác">
                            <field name="shelf_location"/>
                            <field name="expiry_days"/>
                            <field name="supplier_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extend Product Product Form View -->
    <record id="view_product_product_form_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="current_stock"/>
                <field name="stock_status" widget="badge" 
                       decoration-success="stock_status == 'in_stock'"
                       decoration-warning="stock_status == 'low_stock'"
                       decoration-danger="stock_status == 'out_of_stock'"/>
            </xpath>
        </field>
    </record>

    <!-- Tree view with stock status -->
    <record id="view_product_product_tree_taphoa" model="ir.ui.view">
        <field name="name">product.product.tree.taphoa</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="after">
                <field name="current_stock"/>
                <field name="stock_status" widget="badge" 
                       decoration-success="stock_status == 'in_stock'"
                       decoration-warning="stock_status == 'low_stock'"
                       decoration-danger="stock_status == 'out_of_stock'"/>
            </xpath>
        </field>
    </record>

</odoo>
