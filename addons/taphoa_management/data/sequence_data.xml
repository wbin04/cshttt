<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Sequence cho phiếu nhập kho -->
        <record id="seq_warehouse_receipt" model="ir.sequence">
            <field name="name">Phiếu nhập kho</field>
            <field name="code">taphoa.warehouse.receipt</field>
            <field name="prefix">PN</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence cho phiếu kiểm kê -->
        <record id="seq_stock_check" model="ir.sequence">
            <field name="name">Phiếu kiểm kê</field>
            <field name="code">taphoa.stock.check</field>
            <field name="prefix">KK</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence cho thẻ tích điểm -->
        <record id="seq_loyalty_card" model="ir.sequence">
            <field name="name">Thẻ tích điểm</field>
            <field name="code">customer.loyalty.card</field>
            <field name="prefix">LC</field>
            <field name="padding">8</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence cho giao dịch tích điểm -->
        <record id="seq_loyalty_transaction" model="ir.sequence">
            <field name="name">Giao dịch tích điểm</field>
            <field name="code">customer.loyalty.transaction</field>
            <field name="prefix">LT</field>
            <field name="padding">8</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

    </data>
</odoo>
