<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_wizard_stock_import_form" model="ir.ui.view">
        <field name="name">wizard.stock.import.form</field>
        <field name="model">wizard.stock.import</field>
        <field name="arch" type="xml">
            <form string="Nhập hàng vào kho">
                <group>
                    <group>
                        <field name="product_id" options="{'no_create': True}"/>
                        <field name="quantity"/>
                    </group>
                    <group>
                        <field name="location_id" options="{'no_create': True}"/>
                        <field name="reference"/>
                    </group>
                </group>
                <footer>
                    <button string="Nhập hàng" type="object" name="action_import_stock" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action để mở wizard -->
    <record id="action_wizard_stock_import" model="ir.actions.act_window">
        <field name="name">Nhập hàng nhanh</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.stock.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
